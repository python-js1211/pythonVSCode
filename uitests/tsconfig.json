{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "rootDir": "src",
        "lib": ["es6", "es2018", "dom"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./out",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules", "bootstrap"]
}
