{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "Compile UI Tests",
            "type": "npm",
            "script": "compile",
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch",
                {
                    "base": "$tslint5",
                    "fileLocation": "relative"
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
