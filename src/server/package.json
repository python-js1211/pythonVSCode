{
	"name": "langauge-server-example",
	"description": "Example implementation of a language server in node.",
	"version": "0.0.1",
	"author": "Don Jayamanne",
    "publisher": "donjayamanne",
	"license": "MIT",
	"engines": {
		"node": "*"
	},
	"dependencies": {
		"vscode-languageserver": "^1.1.0"
	},
	"devDependencies": {
		"typescript": "^1.6.2"
	},
	"scripts": {
		"compile": "tsc -p . && installServerIntoExtension ../../out ./package.json ./tsconfig.json && tsc -p .",
		"watch": " tsc -p . && installServerIntoExtension ../../out ./package.json ./tsconfig.json && tsc --watch -p ."
	}
}